<!DOCTYPE html>
<html lang="en">
    <%- include('partial/head', {title: "Restaurant"}) %>
<body class="bg-light">
    <%- include('partial/navbar') %>

    <div class="container my-5">
        <h1 class="text-center text-dark fw-bold mb-4">Restaurants</h1>

        <form class="d-flex justify-content-center mb-4" method="GET" action="/restaurant">
            <input class="form-control w-50 me-2" type="search" name="search" placeholder="Search restaurants..." aria-label="Search">
            <button class="btn btn-success" type="submit" value="search">Search</button>
        </form>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.forEach(el => { %>
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <h5 class="card-header bg-dark text-white text-center"><%= el.name_restaurant %></h5>
                        <div class="card-body text-center">
                            <% if (el.imageURL) { %>
                                <img src="<%= el.imageURL %>" class="img-fluid rounded mb-3" style="max-height: 200px;" alt="<%= el.name_restaurant %>">
                            <% } else { %>
                                <p class="text-muted">No image available</p>
                            <% } %>
                            <p class="card-text">Address: <%= el.address || 'Not available' %></p>
                            <a href="/restaurant/<%= el.id %>" class="btn btn-primary rounded-pill px-4">Restaurant Detail</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
</body>
</html>